<%= render :partial => 'menu_cidades' %>
<div class="grid_10">
	<div class="box round">
<h2>Listar Cidades</h2>

<table>
  <tr>
    <th>Nome</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cidades.each do |cidade| %>
  <tr>
    <td><%= cidade.nome %></td>
    <td><%= link_to 'Show', cidade %></td>
